.cartcontrol
  font-size 0
  .cart-decrease
    display inline-block
    padding 6px
      //指向transition
    &.fade-enter-active,&.fade-leave-active
      transition all 0.25s linear
    &.fade-enter,&.fade-leave-active
      opacity 0
      transform translate3(24px,0,0)
    &.inner-enter-active,&.inner-leave-active
      transition: all 0.25s linear
      transform rotate(0)
    &.inner-enter,&.inner-leave-active
      opacity 0
      transform rotateY(180deg)
    .inner
      display inline-block
      padding 6px
      line-height 24px
      font-size 24px
      color rgb(0,160,220)

  .cart-count
    vertical-align top
    width 12px
    display inline-block
    font-size 10px
    text-align center
    padding-top 6px
    line-height 24px
    color rgb(147,153,159)
  .cart-add
    display inline-block
    padding 6px
    line-height 24px
    font-size 24px
    color rgb(0,160,220)



